---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&display=swap"
            rel="stylesheet"
        />

        <title>{title}</title>
    </head>
    <body class="container max-w-3xl mx-auto p-4">
        <nav class="py-4 flex flex-wrap gap-4 text-lg">
            <a class="grow" href="/">Nikoli Daigneault</a>
            <a href="/">Home</a>
            <a href="/resume">Resume</a>
        </nav>

        <slot />
    </body>
</html>
