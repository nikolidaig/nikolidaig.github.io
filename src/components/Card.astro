---
const props = Astro.props;
---

<div class="bg-white border rounded border-slate-600">
    {
        !props.hasOwnProperty("no-header") && (
            <div class="font-sans px-4 py-1 rounded-t border-b border-slate-600 text-slate-800">
                <slot name="header" />
            </div>
        )
    }
    <div class="p-4">
        <h2 class="text-lg font-bold mb-2">
            <slot name="title" />
        </h2>
        <p>
            <slot name="description" />
        </p>
        <div class="underline mt-2"><slot name="link" /></div>
    </div>
</div>
